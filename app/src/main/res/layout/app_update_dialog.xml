<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center|center_vertical">
    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="340dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="295dp"
            android:background="@drawable/white_corner_bg"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="145dp"
                >
                <View
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:background="@drawable/dialog_top_bg"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|center_vertical"
                    android:layout_gravity="center|bottom"
                    android:background="@mipmap/shield"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/update"
                        android:id="@+id/titleimg"
                        android:layout_marginBottom="8dp"/>

                </LinearLayout>

            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center|center_vertical"
                android:padding="16dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Success"
                    android:textColor="#000000"
                    android:id="@+id/titletext"
                    android:textSize="15dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your certificate is downloaded successfully.Now you can view this certificate as PDF."
                    android:textSize="13dp"
                    android:textColor="#454545"
                    android:gravity="center|center_vertical"
                    android:id="@+id/content"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:gravity="top|center"
            android:layout_gravity="bottom|center"
            >
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/cancelbut"
                app:backgroundTint="#FC0E39"
                android:visibility="visible"
                app:srcCompat="@mipmap/cancel"
                android:layout_marginRight="20dp"
                />
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/donebut"
                android:layout_marginLeft="20dp"
                app:backgroundTint="@color/colorAccent"
                android:visibility="visible"
                app:srcCompat="@mipmap/done"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>