<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logowatermark"
        android:layout_gravity="center|center_vertical"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#90ffffff"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="56dp"
                android:text="Student Profile"
                android:textColor="#333333"
                android:textSize="15dp"
                android:textStyle="bold|italic"
                android:visibility="gone" />
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/top_corner"
            android:id="@+id/ugbacklay"
            android:layout_gravity="right">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/cancel"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="4dp"
                />

        </FrameLayout>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/profile_layout"/>
        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingBottom="16dp"
                android:paddingLeft="16dp"

                android:paddingRight="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="6dp"
                    android:src="@mipmap/bculogo" />

                <TextView
                    android:id="@+id/nameenglish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|center_horizontal"
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="6dp"
                    android:text="@string/english_title"
                    android:textColor="@color/pink"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|center_vertical"
                    android:layout_marginTop="16dp">

                <com.vskub.certificate.SpannableTextvw.SpannableTextView
                    android:id="@+id/englishtext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:gravity="center"
                    android:text=""
                    android:lineSpacingExtra="6dp"
                    android:paddingBottom="6dp"
                    android:textSize="15dp"
                    android:textColor="#666666"
                    />
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/degreetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:visibility="visible"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="15dp"
                        android:textColor="@color/blue"
                        />
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="on"
                        android:layout_marginTop="5dp"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="15dp"
                        android:textColor="#666666"
                        android:visibility="visible"
                        />
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/nametext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="5dp"
                        android:text=""
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="15dp"
                        android:textColor="@color/blue"
                        android:visibility="visible"
                        />
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/englishtext2"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=""
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="10dp"
                        android:textColor="#666666"
                        />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@mipmap/place_male"
                        android:layout_marginTop="16dp"
                        android:id="@+id/studentimage"
                        android:visibility="visible"
                        />

                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/regnotext"
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12389d"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="15dp"
                        android:textColor="@color/green"
                        />
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/collegetext"
                        android:layout_marginTop="2dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="12389d"
                        android:lineSpacingExtra="6dp"
                        android:paddingBottom="6dp"
                        android:textSize="15dp"
                        android:textColor="@color/green"
                        />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:gravity="center|center_vertical"
                        android:orientation="vertical"
                        android:layout_marginTop="20dp">
                    <com.vskub.certificate.SpannableTextvw.SpannableTextView
                        android:id="@+id/vicechallancetext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Dr.P.Ganesh"
                        android:textSize="15dp"
                        android:textColor="@color/colorred"
                        android:textStyle="bold|italic"
                        />
                        <com.vskub.certificate.SpannableTextvw.SpannableTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_marginTop="3dp"
                            android:text="Vice Chancellor"
                            android:lineSpacingExtra="6dp"
                            android:id="@+id/vicechallance"
                            android:paddingBottom="6dp"
                            android:textSize="17dp"
                            android:textColor="@color/colorred"
                            />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/bottom_corner"
        android:id="@+id/downloadlay"
        android:layout_marginLeft="-20dp"
        android:layout_marginBottom="-20dp"
        android:layout_gravity="bottom">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/download1"
            android:layout_gravity="right"
            android:layout_marginRight="22dp"
            android:layout_marginTop="22dp"
            />

    </FrameLayout>

</FrameLayout>